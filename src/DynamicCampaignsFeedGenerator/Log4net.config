<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <log4net>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{dd.MMM.yy HH:mm:ss} %-5level - %message%newline" />
      </layout>
    </appender>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="./logs/DynamicCampaignsFeedGenerator.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="1024KB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{dd.MMM.yy HH:mm:ss:fff} %-5level - %message%newline" />
      </layout>
    </appender>
    <appender name="SmtpAppender" type="log4net.Appender.SmtpAppender">
      <to value="cyilmaz@indigo.ca" />
      <from value="dynamiccampaignsfeedgenerator@indigo.ca" />
      <subject value="[DEV] - Dynamic Campaigns Feed Generator Notification Email" />
      <smtpHost value="mx1.indigo.corp" />
      <bufferSize value="512" />
      <lossy value="false"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{dd.MMM.yy HH:mm:Ss} %-5level - %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="INFO" />
      <appender-ref ref="RollingFileAppender" />
      <appender-ref ref="ConsoleAppender" />
      <appender-ref ref="SmtpAppender" />
    </root>
  </log4net>
</configuration>